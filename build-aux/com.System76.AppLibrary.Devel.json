{
    "app-id": "com.System76.AppLibrary.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "cosmic-app-library",
    "finish-args" : [
	    "--filesystem=xdg-data/flatpak:ro",
	    "--filesystem=xdg-data:ro",
        "--filesystem=xdg-desktop:ro",
        "--filesystem=xdg-config/cosmic-theme:ro",
	    "--filesystem=xdg-data/cosmic-theme:ro",
     	"--filesystem=xdg-config/com.System76.CosmicAppLibrary:ro",
	    "--filesystem=xdg-data/com.System76.CosmicAppLibrary:create",
	    "--filesystem=host",
	    "--filesystem=home",
	    "--talk-name=org.freedesktop.Flatpak",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--env=RUST_LOG=cosmic-app-library=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "cosmic-app-library",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": ["-Dprofile=development"],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
